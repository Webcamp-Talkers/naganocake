<div class="row" style="width:70%; margin:0 auto;">
  <h2>注文履歴一覧</h2>
  <div class="row">
    <div class="col-xs-12">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <% @endusers.each do |enduser| %>
          <tbody>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                <%= link_to hostuser_path(enduser) do %>
                  <%= enduser.first_name %><%= enduser.last_name %>
                <% end %>
              </td>
              <td><%= enduser.order_items.quantity %></td>
              <td>
                <% if enduser.order_status == 1 %>
                  入金待ち
                <% elsif enduser.order_status == 2 %>
                  入金待ち
                <% elsif enduser.order_status  == 3 %>
                  制作中
                <% elsif enduser.order_status == 4 %>
                  発送準備中
                <% else %>
                  発送済み
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
