<div class="row" style="margin: 0 auto;">
  <h2><%= @enduser.first_name %><%= @enduser.last_name %>さんの会員情報編集</h2>
  <div class="row">
    <%= form_with model:@enduser, url: hostuser_path, method: :patch, local: true do |f| %>
      <div class="form-group col-xs-7">
        <!--<label>顧客ID</label>-->
        <%= f.label :"顧客ID", class: "col-sm-3 control-label" %>　　
        <%= @enduser.id %>
      </div>
      <div class="form-group col-xs-7">
        <%= f.label :"氏名", class: "col-sm-3 control-label" %>
        <!--<label>氏名</label>-->
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-sm-3 form-control-static" %>
        <div class="col-sm-1"></div>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "col-sm-3 form-control-static" %>
      </div>
      <div class="form-group col-xs-7">
        <%= f.label :"フリガナ", class: "col-sm-3 control-label" %>
        <!--<label>フリガナ</label>-->
        <%= f.text_field :first_furigana, autofocus: true, autocomplete: "first_furigana", class: "col-sm-3 form-control-static" %>
        <div class="col-sm-1"></div>
        <%= f.text_field :last_furigana, autofocus: true, autocomplete: "last_furigana", class: "col-sm-3 form-control-static" %>
      </div>
      <div class="form-group col-xs-7">
        <%= f.label :"郵便番号", class: "col-sm-3 control-label" %>
        <!--<label>郵便番号</label>-->
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-sm-3 form-control-static" %>
      </div>
      <div class="form-group col-xs-7">
        <%= f.label :"住所", class: "col-sm-3 control-label" %>
        <!--<label>住所</label>-->
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-sm-9 form-control-static" %>
      </div>
      <div class="form-group col-xs-7">
        <%= f.label :"電話番号", class: "col-sm-3 control-label" %>
        <!--<label>電話番号</label>-->
        <%= f.telephone_field :phone_number, autofocus: true, autocomplete: "last_name", class: "col-sm-4 form-control-static" %>
      </div>
      <div class="form-group col-xs-7">
        <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
        <!--<label>メールアドレス</label>-->
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-4 form-control-static" %>
      </div>
      <div class="form-group col-xs-7">
        <%= f.label :"会員ステータス", class: "col-sm-3 control-label" %>
        <!--<label>会員ステータス</label>-->
        <%= f.radio_button :costomer_status, :true %>
        <label>有効にする</label>
        <%= f.radio_button :costomer_status, :false %>
        <label>退会済み</label>
      </div>
      <div class="form-group col-xs-7">
        <%= f.submit "変更を保存する", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
