<div class="row" style="width:70%; margin:0 auto;">
  <h2>会員一覧</h2>
  <div class="row">
    <div class="col-xs-12">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @endusers.each do |enduser| %>
          <tbody>
            <tr>
              <td><%= enduser.id %></td>
              <td>
                <%= link_to hostuser_path(enduser) do %>
                  <%= enduser.first_name %><%= enduser.last_name %>
                <% end %>
              </td>
              <td><%= enduser.email %></td>
              <td>
                <% if enduser.costomer_status == true %>
                  有効会員
                <% else %>
                  退会済み
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>

