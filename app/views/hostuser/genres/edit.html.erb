<div class="flash">
  <%= flash[:notice] %>
</div>
<div class="row" style="width:70%; margin:0 auto;">
  <h1 class="head-line title_h2">ジャンル編集</h1>
  <div class="col-xs-12">
    <div class="row">
    <%= form_for @genre, :url => {:action => :update} do |f| %>
      <div>
      <i class="fas fa-candy-cane"></i>ジャンル　　
        <%= f.text_field :name  %>　　
        <%= f.radio_button :valid_flag, false %>
        <%= f.label :valid_flag, "有効", {value: :false, style: "display: inline-block;"} %>
        <%= f.radio_button :valid_flag, true %>
        <%= f.label :valid_flag, "無効", {value: :true, style: "display: inline-block;"} %>
        <%= f.submit "変更を保存する", class: "btn btn-info" %>
      </div>
    <% end %>
      <br>
      <div class="col-xs-12">
        <%= link_to "戻る", hostuser_genres_path, class: "glyphicon glyphicon-home btn btn-info" %>
      </div>
    </div>
  </div>
</div>