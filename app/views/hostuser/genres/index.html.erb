<div class="row" style="width:70%; margin:0 auto;">
  <h1 class="head-line title_h2">ジャンル一覧・追加</h1>
  <div class="col-xs-12">
    <div class="row">
      <%= form_for @genre, :url => {:action => :create} do |f| %>
        <div>
          <i class="fas fa-candy-cane"></i>ジャンル　　
          <%= f.text_field :name  %>　　
            <%= f.radio_button :valid_flag, false %>
            <%= f.label :valid_flag, "有効", {value: :false, style: "display: inline-block;"} %>
            <%= f.radio_button :valid_flag, true %>
            <%= f.label :valid_flag, "無効", {value: :true, style: "display: inline-block;"} %>
          <%= f.submit "追加", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12">
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="text-left"><%= genre.name %></td>

              <% if genre.valid_flag == false %>
                <td class="genre-td"><i class="fas fa-bullseye red"></i>有効</td>
              <% elsif genre.valid_flag == true %>
                <td class="genre-td"><i class="fas fa-bullseye blue"></i>無効</td>
              <% end %>
              <td class="genre-td"><%= link_to "編集する", edit_hostuser_genre_path(genre), class: "glyphicon glyphicon-pencil btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
