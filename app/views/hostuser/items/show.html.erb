<div class="row">

  <h2 class="fa fa-birthday-cake">商品詳細</h2><br>
  　<div class="col-xs-4">
  　   <label>商品画像</label>
　　　<%= attachment_image_tag @item, :image, :fill, 300, 200, fallback: "no_image.jpg", size: "300x200" %>
　　</div>
    <div class="col-xs-7">
      <div class="col-xs-12 item name">
        <label class="col-sm-3">商品名</label>
        <div class="col-sm-5"><%= @item.name %></div>
      </div>
      <div class="col-xs-12 item details">
        <label class="col-sm-3">商品説明</label>
        <div class="col-sm-5"><%= @item.details %></div>
      </div>
      <div class="col-xs-12 item genre">
        <label class="col-sm-3">ジャンル</label>
        <div class="col-sm-5"><%= @item.genre.name %></div>
      </div>
      <div class="col-xs-12 item price_before_tax">
        <label class="col-sm-3">税込価格/(税抜価格)</label>
        <div class="col-sm-5"><%= @price_includ_tax.to_s(:delimited) %>/(<%= @item.price_before_tax.to_s(:delimited) %>)円</div>
      </div>
      <div class="col-xs-12 item sales_status">
        <label class="col-sm-3">販売ステータス</label>
        <div class="col-sm-5"><%= @item.sales_status %></div>
      </div>
      <div class="actions col-xs-12 text-right">
        <%= link_to '編集する', edit_hostuser_item_path(@item.id), data: {"turbolinks" => false}, class: "btn btn-primary btn-lg active" %>
      </div>
    </div>
</div>