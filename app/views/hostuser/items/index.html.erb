<div class="row">
  <div class="col-xs-12">
    <h2>商品一覧</h2>
    <br>
    <table class="table">
      <thead>
        <tr>
    			<th>商品ID</th>
    			<th>商品名</th>
    			<th>税抜価格</th>
    			<th>ジャンル</th>
    			<th>ステータス</th>
		    </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, hostuser_item_path(item) %></td>
            <td><%= item.price_before_tax %></td>
            <!--↓あとでジャンルidに書き直す-->
            <td><%= item.genre_id %></td>
            <td><%= item.sales_status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>