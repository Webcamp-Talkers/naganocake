<div class="row">
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group col-xs-12">
    <%= f.label :"名前", class: "col-sm-2 control-label" %>
    <%= f.label :"(姓）", class: "col-sm-1 control-label" %>
    <%= f.text_field :first_name, class: "col-sm-3 form-control-static" %>
    <%= f.label :" (名）", class: "col-sm-1 control-label" %>
    <%= f.text_field :last_name, class: "col-sm-3 form-control-static" %>
  </div><br>

  <div class="field form-group col-xs-12">
    <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
    <%= f.label :"(セイ）", class: "col-sm-1 control-label" %>
    <%= f.text_field :first_name, class: "col-sm-3 form-control-static" %>
    <%= f.label :"（メイ）", class: "col-sm-1 control-label" %>
    <%= f.text_field :last_name, class: "col-sm-3 form-control-static" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
    <!--<div class="col-sm-1"></div>-->
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3 form-control-static" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-3 control-label" %>
    <%= f.text_field :postal_code, class: "col-sm-3 form-control-static", id:"address_zipcode" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"住所", class: "col-sm-3 control-label" %>
    <%= f.text_field :address, class: "col-sm-7 form-control-static", id:"address_all" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"電話番号（ハイフンなし）", class: "col-sm-3 control-label" %>
    <%= f.telephone_field :phone_number, class: "col-sm-3 form-control-static" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"パスワード（６文字以上）", class: "col-sm-3 control-label" %>
    <% if @minimum_password_length %>
    <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-3 form-control-static" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"パスワード（確認用）", class: "col-sm-3 control-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-3 form-control-static" %>
  </div>

  <div class="field form-group col-xs-12">
    <div class="col-xs-5"></div>
    <%= f.submit "新規登録", class:"col-sm-2 btn btn-success center-block" %>
    <div class="col-xs-5"></div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>