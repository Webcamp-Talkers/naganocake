<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-8">
    <h2>パスワードの再設定</h2>
    <div class="row">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field form-group col-xs-12">
        <%= f.label :password, "新しいパスワード" %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "col-sm-5 form-control-static" %><br>
        <% if @minimum_password_length %>
          <br><em><%= @minimum_password_length %> 文字以上入力してください</em>
        <% end %>
      </div>
      <div class="field form-group col-xs-12">
        <%= f.label :password_confirmation, "パスワードの確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-5 form-control-static" %>
      </div>
      <div class="field form-group col-xs-12">
        <%= f.submit "登録する", class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>