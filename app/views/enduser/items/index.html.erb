<div class="row">
  <%= render 'enduser/genres/genre_search', genres: @genres %>
  <div class="col-xs-10">
    <h2 class="fa fa-birthday-cake"> 商品(全<%= @items.count{|i| i.sales_status =='販売中'}  %>件)</h2><br>
    <!--@items.sales_status.count(1)-->
    <% @items.each do |item| %>
       <% if item.sales_status == "販売中" %>
        <div class="col-xs-3">
          <%= link_to enduser_item_path(item) do %>
　　　　　　<%= attachment_image_tag item, :image, :fill, 150, 100, fallback: "no_image.jpg", size: "150x100" %><br />
　　　　　<% end %><br />
          <%= item.name %><br />
          ¥<%= item.price_before_tax.to_s(:delimited) %>円(税抜)<br />
        </div>
      <% end %>
    <% end %>
  </div>
</div>
