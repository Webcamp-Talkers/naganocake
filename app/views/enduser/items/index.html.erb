<div class="row">
  <div class="col-xs-2">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>ジャンル名</td>
      </tr>
    </tbody>
  </table>
  </div>
  <div class="col-xs-10">
    <h2>商品一覧(全XX件)</h2>
    <% @items.each do |item| %>
      <% if item.sales_status == "販売中" %>
        <div class="col-md-3">
　　　　　<%= attachment_image_tag item, :image, :fill, 150, 100, fallback: "no_image.jpg", size: "150x100" %><br />
          <%= link_to item.name, enduser_item_path(item) %><br />
          ¥<%= item.price_before_tax %>円<br />
        </div>  
      <% end %>  
    <% end %>
  </div>
</div>
