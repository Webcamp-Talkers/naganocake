<div class="row">
  <%= render 'enduser/genres/genre_search', genres: @genres %>

  <h2>顧客側の商品詳細</h2>
  　<div class="col-xs-3">
  　  <label>商品画像</label>
　　　<%= attachment_image_tag @item, :image, :fill, 250, 175, fallback: "no_image.jpg", size: "250x175" %>
　　</div>
    <div class="col-xs-3">
      <div class="item name">
        <label>商品名</label>
        <%= @item.name %><br>
      </div>
      <div class="item details">
        <label>商品説明</label>
        <%= @item.details %><br>
      </div>
      <div class="item price_before_tax">
        <label>税込価格</label>
        ¥<%= (@item.price_before_tax*1.1).floor %> (税込)<br>
      </div>
    </div>
    <div class="col-xs-4">
      <%= form_with model: @cart_item, url: enduser_cart_items_path, local: true do |f| %>
         <%= f.hidden_field :item_id, value: @item.id %>
      　 <%= f.select :quantity, (1..50) %>個
         <%= f.submit "カートに入れる", class: "btn btn-primary" %>
      <% end %>
    </div>
</div>

