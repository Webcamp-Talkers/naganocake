<div class="row">
  <div class="col-xs-2">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ジャンル検索</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>ジャンル名</td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <h2>顧客側の商品詳細</h2>
    　<div class="col-xs-3">
    　  <label>商品画像</label>
  　　　<%= attachment_image_tag @item, :image, :fill, 250, 175, fallback: "no_image.jpg", size: "250x175" %>
  　　</div>
      <div class="col-xs-3">
        <div class="item name">
          <label>商品名</label>
          <%= @item.name %><br>
        </div>
        <div class="item details">
          <label>商品説明</label>
          <%= @item.details %><br>
        </div>
        <div class="item price_before_tax">
          <label>税込価格</label>
          ¥<%= @price_includ_tax %> (税込)<br>
        </div>
      </div>  
      <div class="col-xs-4">
        <%= form_with model: @item, url: hostuser_items_path, local: true do |f| %>
        <%= link_to 'カートに入れる', edit_hostuser_item_path(@item.id), class: "btn btn-primary" %>
        <% end %>
      </div>
    
</div>  
  
