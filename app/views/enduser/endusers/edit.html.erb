<h2>登録情報編集</h2>
<div class="row">

<%= form_with model:@enduser, url: endusers_path, local: true, method: :patch do |f| %>

  <div class="field form-group col-xs-12">
    <%= f.label :"名前", class: "col-sm-2 control-label" %>
    <%= f.label :"(姓）", class: "col-sm-1 control-label" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "family-name", class: "col-sm-3 form-control-static" %>
    <%= f.label :" (名）", class: "col-sm-1 control-label" %>
    <%= f.text_field :last_name, autocomplete: "given-name", class: "col-sm-3 form-control-static" %>
  </div><br>

  <div class="field form-group col-xs-12">
    <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
    <%= f.label :"(セイ）", class: "col-sm-1 control-label" %>
    <%= f.text_field :first_furigana, class: "col-sm-3 form-control-static" %>
    <%= f.label :"（メイ）", class: "col-sm-1 control-label" %>
    <%= f.text_field :last_furigana, class: "col-sm-3 form-control-static" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
    <!--<div class="col-sm-1"></div>-->
    <%= f.email_field :email, autocomplete: "email", class: "col-sm-3 form-control-static" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-3 control-label" %>
    <%= f.text_field :postal_code, autocomplete: "postal_code", class: "col-sm-3 form-control-static", id:"address_zipcode" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"住所", class: "col-sm-3 control-label" %>
    <%= f.text_field :address, autocomplete: "street-address", class: "col-sm-7 form-control-static", id:"address_all" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"電話番号（ハイフンなし）", class: "col-sm-3 control-label" %>
    <%= f.telephone_field :phone_number, autocomplete: "tel-national", class: "col-sm-3 form-control-static" %>
  </div>

  <div class="field form-group col-xs-12">
    <div class="col-sm-2"></div>
      <%= f.submit "編集を保存する", class:"col-sm-3 btn btn-success center-block" %>
    <div class="col-sm-3"></div>
    <%= link_to "退会する", endusers_leaving_path, class:"col-sm-2 btn btn-danger center-block" %>
  </div>
<% end %>

</div>
