<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h2>ショッピングカート</h2>
     <table class="table table-striped">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.price_before_tax %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.sales_status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
</div>