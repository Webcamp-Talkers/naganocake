<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h2>ショッピングカート</h2>
     <table class="table table-striped">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <%= form_with model: @cart_item, url: enduser_cart_items_path, method: :patch, local: true do |f| %>
            <tr>
              <td>
                <%= attachment_image_tag item, :image, :fill, 30, 20, fallback: "no_image.jpg", size: "30x20" %>
                <%= item.name %>
              </td>
              <td><%= (item.price_before_tax*1.1).floor %>円</td>
              <td><%=  %></td>
              <td><%= %></td>
            </tr>
          <% end %>  
        <% end %>
      </tbody>
    </table>
  </div>
</div>