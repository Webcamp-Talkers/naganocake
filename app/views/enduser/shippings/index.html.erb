<div class="row">
  <h2>配送先登録/一覧</h2>
  <div class="col-xs-10">
    <%= form_with model:@shipping, url: enduser_shippings_path, local: true do |f| %>

    <div class="field form-group col-xs-12">
      <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-3 control-label" %>
      <%= f.text_field :postal_code, class: "col-sm-3 form-control-static" %>
    </div>

    <div class="field form-group col-xs-12">
      <%= f.label :"住所", class: "col-sm-3 control-label" %>
      <%= f.text_field :address, class: "col-sm-6 form-control-static" %>
    </div>

    <div class="field form-group col-xs-12">
      <%= f.label :"宛名", class: "col-sm-3 control-label" %>
      <%= f.text_field :name, class: "col-sm-3 form-control-static" %>
      <div class="col-sm-3"></div>
      <%= f.submit "登録する", class:"col-sm-2 btn btn-success center-block" %>
    </div>

    <% end %>
  </div>
  <div class="col-xs-7">
    <table class="table table-bordered">
    	<thead>
    		<tr>
    			<th>郵便番号</th>
    			<th>住所</th>
    			<th>宛名</th>
    			<th></th>
    		</tr>
    	</thead>
    	<tbody>
    	  <% @shippings.each do |shipping| %>
    		<tr>
    			<td><%= shipping.postal_code %></td>
    			<td><%= shipping.address %></td>
    			<td><%= shipping.name %></td>
    			<td><%= link_to "編集する",edit_enduser_shipping_path(shipping), class:"btn btn-primary" %><%= link_to "削除する", enduser_shipping_path(shipping), method: :delete, class:"btn btn-danger" %></td>
    		</tr>
    		<% end %>
    	</tbody>
    </table>
  </div>
</div>