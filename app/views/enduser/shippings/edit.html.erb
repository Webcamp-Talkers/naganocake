<h2>配送先編集</h2>
<div class="row">
  <div class="col-xs-10">
    <%= form_with model:@shipping, url: enduser_shipping_path(@shipping), method: :patch, local: true do |f| %>

    <div class="field form-group col-xs-12">
      <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-4 control-label" %>
      <%= f.text_field :postal_code, class: "col-sm-3 form-control-static" %>
    </div>

    <div class="field form-group col-xs-12">
      <%= f.label :"住所", class: "col-sm-4 control-label" %>
      <%= f.text_field :address, class: "col-sm-3 form-control-static" %>
    </div>

    <div class="field form-group col-xs-12">
      <%= f.label :"宛名", class: "col-sm-4 control-label" %>
      <%= f.text_field :name, class: "col-sm-3 form-control-static" %>
      <div class="col-sm-1"></div>
      <%= f.submit "更新する", class:"col-sm-2 btn btn-success center-block" %>
    </div>

    <% end %>
  </div>
</div>