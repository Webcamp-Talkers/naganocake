<div class="row" style="margin: 0 auto;">
  <h2>注文履歴詳細</h2>
  <div class="row">
    <div class="col-xs-8">
      <h4>注文情報</h4>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.postal_code %><br>
          <%= @order.address %><br>
          <%= @order.name %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.method_pay %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.order_status %></td>
        </tr>
      </table>
    </div>
    <div class="col-xs-4">
      <h4>請求情報</h4>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td><%= @order.price_include_tax - 800 %> 円</td>
        </tr>
        <tr>
          <th>配送料</th>
          <td>800</td>
        </tr>
        <tr>
          <th><b>ご請求額</b></th>
          <td><%= @order.price_include_tax %> 円</td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <h4>注文内容</h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_items| %>
          <tr>
            <td><%= order_items.item.name %></td>
            <td><%= (order_items.item.price_before_tax*1.1).floor %> 円</td>
            <td><%= order_items.quantity %> 個</td>
            <td><%= (order_items.item.price_before_tax*1.1).floor*order_items.quantity %> 円</td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>