<div class="row" style="width:70%; margin: 0 auto;">
  <h2>注文情報確認</h2>
  <div class="row">
    <div class="col-xs-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>

      </table>
    </div>
    <div class="col-xs-4">
      <table class="table table-bordered">
        <tr>
          <th>送料</th>
          <td>800</td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td></td>
        </tr>
        <tr>
          <th>請求金額</th>
          <td></td>
        </tr>
      </table>
    </div>
  </div>
  <h3>支払い方法</h3>
  <%= @order.method_pay %>
  <h3>お届け先</h3>
  <%= @order.postal_code %>
  <%= @order.address %>
  <%= @order.name %>
  <div class="row">
    <%= form_with model:@order, url: enduser_orders_thanks_path, local: true do |f| %>
    <%= f.submit "購入を確認する" %>
    <% end %>
  </div>
</div>

