<div class="row" style="margin: 0 auto;">
  <h2>注文情報入力画面</h2>

  <%= form_with model:@order, url: enduser_orders_confirm_path, local: true do |f| %>
    <div class="form-group">
      <h3>支払い方法</h3>
      <label><%= f.radio_button :method_pay, :"クレジットカード" %>クレジットカード</label>
      <label><%= f.radio_button :method_pay, :"銀行振込" %>銀行振込</label>
    </div>
    <div class="form-group">
      <h3>お届け先</h3>
      <div class="address-select">
        <h4><%= f.radio_button :order, :"ご自身の住所" %>ご自身の住所</h4>
        <span><%= @enduser.postal_code %><%= @enduser.address %></span>
        <span><%= @enduser.first_name %><%= @enduser.last_name %></span>
      </div>

      <div class="address-select">
        <h4><%= f.radio_button :order, :"発送済みの住所から選択" %>発送済の住所から選択</h4>
          <%= f.collection_select(:shipping, @shipping, :id, :address) %>
      </div>

      <div class="address-select">
        <h4><%= f.radio_button :order, :"新しいお届け先" %>新しいお届け先</h4>
        <div class="form_group">
          <label>郵便番号(ハイフンなし)</label>
            <%= f.text_field :pastal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
        <div class="form_group">
          <label>住所</label>
            <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
        <div class="form_group">
          <label>宛名</label>
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
      </div>
    </div>
    <%= f.submit "確認画面に進む", class: 'btn btn-info' %>
  <% end %>
</div>
