<div class="row" style="margin: 0 auto;">
  <h2>注文情報入力画面</h2>
  
  <%= form_with model:@order, local: true do |f| %>
    <div class="form-group">
      <h3>支払い方法</h3>
      <label><%= f.radio_button :method_pay, :1 %>クレジットカード</label>
      <label><%= f.radio_button :method_pay, :2 %>銀行振込</label>
    </div>
    <div class="form-group">
      <h3>お届け先</h3>
      <div class="address-select">
        <h4><%= f.radio_button %>ご自身の住所</h4>
        <span><%= current_user.postal_code %><%= current_user.address %></span>
        <span><%= current_user.first_name %><%= current_user.last_name %></span>
      </div>
      
      <div class="address-select">
        <h4><%= f.radio_button %>発送済の住所から選択</h4>
        <%= f.collection_select(:shippings, :id, pastal_code, :id, address, :id, name) %>
      </div>
      
      <div class="address-select">
        <h4><%= f.radio_button %>新しいお届け先</h4>
        <label>郵便番号(ハイフンなし)</label>
          <%= f.text_field :pastal_code, autofocus: true, autocomplete: "postal_code" %>
        <label>住所</label>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        <label>宛名</label>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
    </div>
    <%= f.submit "確認画面に進む", class: 'btn btn-info center-block' %>
  <% end %>
</div>
