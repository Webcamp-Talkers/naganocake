<div class="row" style="width:70%; margin: 0 auto;">
  <h2>注文情報入力画面</h2>

  <%= form_with model:@order, url: confirm_enduser_orders_path, local: true do |f| %>
    <div class="form-group">
      <h3>支払い方法</h3>
      <label><%= f.radio_button :method_pay, "クレジットカード" %>クレジットカード</label>
      <label><%= f.radio_button :method_pay, "銀行振込" %>銀行振込</label>
    </div>
    <div class="form-group">
      <h3>お届け先</h3>
      <div class="address-select">
        <%= f.radio_button :order, 0, checked: "checked" %>
        <%= f.label :order_adderss, "ご自身の住所" %>
        <%= @enduser.postal_code %><%= @enduser.address %>
        <%= @enduser.first_name %><%= @enduser.last_name %>
      </div>

      <div class="address-select">
        <%= f.radio_button :order, 1 %>
        <%= f.label :order_adderss, "登録済住所から選択" %>
      </div>
      <div class="field form-group">
        <%= f.collection_select(:id, @shipping, :id,:full_address) %>
      </div>

      <div class="address-select">
        <%= f.radio_button :order, 2 %>
        <%= f.label :order_adderss, "新しいお届け先" %>
      <div class="field form-group">
        <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-3 control-label" %>
        <%= f.text_field :postal_code, autofocus: true,class: "col-sm-3", id:"shipping_postal_code" %>
      </div><br>

      <div class="field form-group">
        <%= f.label :"住所", class: "col-sm-3 control-label" %>
        <%= f.text_field :address, class: "col-sm-6", id:"shipping_address" %>
      </div><br>

      <div class="field form-group">
        <%= f.label :"宛名", class: "col-sm-3 control-label" %>
        <%= f.text_field :name, class: "col-sm-3", id:"shipping_name" %>
      </div><br>
    </div>
    <%= f.submit "確認画面に進む", class: 'btn btn-info' %>
  <% end %>
</div>
